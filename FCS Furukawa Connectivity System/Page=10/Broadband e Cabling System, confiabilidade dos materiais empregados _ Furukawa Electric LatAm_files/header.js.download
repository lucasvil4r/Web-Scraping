$(document).ready(function() {
    
   function headerFixed(){
        
        if( $(window).scrollTop()> 800) 
        {
            $("header").stop(true, true).addClass("header-fixed");
        }
        else
        {
            $("header").stop(true, true).removeClass("header-fixed");
        }
    };

        
    
    $( document).on('click',"#select-language" ,function() {
        
        if ( $( "#language-options" ).hasClass( "active" ) ) {
            $("#language-options").removeClass("active");
        }
        else
        {
             $("#language-options").addClass("active");    
        }
    });
    
    $( "#language-options li" ).click(function() {
        
        var optionClicked = $(this).text();
        
        
        if ( $( "#language-options" ).hasClass( "active" ) ) {
            $("#language-options").removeClass("active");
        }
        else
        {
             $("#language-options").addClass("active");    
        }
        
        
        $( "#select-language" ).text(optionClicked);
        
    });

    $("#header-mobile-pin").click(function(){
    
        $(".site-modal-mobile").addClass("active");
        $(".site-modal-mobile-content").addClass("active");

    });
    
    $(window).on('scroll', function() {
        headerFixed();
    });


});